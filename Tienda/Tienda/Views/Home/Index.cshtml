
@{
    ViewBag.Title = "Index";
    var ListaProductos = ViewBag.ListaProductos;
}

    <div class="deslizar" style="width:100%">
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="#">TiendaCortos</a>
                </div>
                <ul class="nav navbar-nav">
                    <li class=""><a href="#">Home</a></li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">Categoria <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">Autos</a></li>
                            <li><a href="#">Celulares</a></li>
                            <li><a href="#">Computadoras</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </nav>
    </div>

    <h2>Articulos</h2>

    <a href="@Url.Action("Agregar")">Agregar</a>

    <div class="container">
        <div class="row">

            @foreach (var item in ListaProductos)
            {

                <div class="col-lg-4">

                    <div class="panel panel-default">
                        <div class="panel-heading">@item.nombre</div>
                        <div class="panel-body">



                            <img class="img-responsive" src="@item.imagen" /> <br />
                            <p>@item.describcion </p><br />
                            <p>$ @item.precio</p>
                        </div>


                    </div>

                </div>
            }
        </div>
    </div>


</body>
</html>